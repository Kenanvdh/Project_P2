{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avans-nx-workshop/songlist/common": [
        "libs/share-a-meal/common/src/index.ts"
      ],
      "@indivproj-p2/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@indivproj-p2/backend/features": ["libs/backend/features/src/index.ts"],
      "@indivproj-p2/shared/api": ["libs/shared/api/src/index.ts"],
      "@indivproj-p2/shared/util-env": ["libs/shared/util-env/src/index.ts"],
      "@indivproj-p2/songlist/common": ["libs/songlist/common/src/index.ts"],
      "@indivproj-p2/songlist/features": [
        "libs/songlist/features/src/index.ts"
      ],
      "@indivproj-p2/ui": ["libs/songlist/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
